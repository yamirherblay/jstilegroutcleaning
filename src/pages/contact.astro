---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import ContactForm from '../components/ContactForm.astro';
import Footer from '../components/Footer.astro';
---
<Layout title="Contact Us | JS Tile & Grout" description="Contact JS Tile & Grout Cleaning for a free estimate. Professional tile and grout restoration in South Florida. Call (561) 913-8786.">
  <Header />
  <PageHero
    badge="Free Estimate"
    heading="Contact JS Tile & Grout"
    subtitle='Professional tile and grout restoration in Florida. <span class="text-orange font-semibold">We Speak Spanish.</span>'
    image="/images/contact.png"
  />
  <Breadcrumb items={[{ label: "Home", href: "/" }, { label: "Contact" }]} />
  <ContactForm />
  <Footer />
</Layout>
