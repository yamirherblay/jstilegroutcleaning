---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import CtaBanner from '../components/CtaBanner.astro';
import Footer from '../components/Footer.astro';
import { services } from '../data/services';
import { counties, coverageStats } from '../data/serviceAreas';
import type { County, Testimonial } from '../data/serviceAreas';

// Collect all testimonials
const allTestimonials: Testimonial[] = counties.flatMap((c) => c.testimonials);

// Color map to avoid dynamic Tailwind class concatenation
const colorMap: Record<string, { bg: string; text: string; border: string }> = {
  brown: { bg: 'bg-brown', text: 'text-brown', border: 'border-brown' },
  orange: { bg: 'bg-orange', text: 'text-orange', border: 'border-orange' },
  'blue-accent': { bg: 'bg-blue-accent', text: 'text-blue-accent', border: 'border-blue-accent' },
  'brown-dark': { bg: 'bg-brown-dark', text: 'text-brown-dark', border: 'border-brown-dark' },
};

// JSON-LD: LocalBusiness with areaServed
const localBusinessSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "@id": "#localbusiness",
  "name": "JS Tile & Grout Cleaning",
  "description": "Professional tile and grout cleaning and restoration services in South Florida.",
  "telephone": "+1-561-913-8786",
  "email": "jstilegroutcleaning@gmail.com",
  "url": "https://jstilesgroutcleaning.com",
  "image": "https://jstilesgroutcleaning.com/images/Logo.webp",
  "priceRange": "$$",
  "knowsLanguage": ["English", "Spanish"],
  "openingHoursSpecification": [
    { "@type": "OpeningHoursSpecification", "dayOfWeek": ["Monday","Tuesday","Wednesday","Thursday","Friday"], "opens": "08:00", "closes": "18:00" },
    { "@type": "OpeningHoursSpecification", "dayOfWeek": "Saturday", "opens": "09:00", "closes": "16:00" }
  ],
  "areaServed": counties.map((county) => ({
    "@type": "AdministrativeArea",
    "name": `${county.name}, FL`,
    "containsPlace": county.cities.map((city) => ({
      "@type": "City",
      "name": `${city.name}, FL`
    }))
  })),
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Tile & Grout Services",
    "itemListElement": services.map((s) => ({
      "@type": "Offer",
      "itemOffered": { "@type": "Service", "name": s.title }
    }))
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 26.3683,
    "longitude": -80.1289
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": String(allTestimonials.length),
    "bestRating": "5"
  },
  "review": allTestimonials.map((t) => ({
    "@type": "Review",
    "reviewRating": {
      "@type": "Rating",
      "ratingValue": String(t.stars),
      "bestRating": "5"
    },
    "author": { "@type": "Person", "name": t.name },
    "reviewBody": t.quote,
    "itemReviewed": { "@type": "Service", "name": t.service }
  }))
};

// JSON-LD: Service with GeoCircle
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "serviceType": "Tile and Grout Cleaning",
  "provider": { "@id": "#localbusiness" },
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": { "@type": "GeoCoordinates", "latitude": 26.3683, "longitude": -80.1289 },
    "geoRadius": "150 mi"
  }
};

// JSON-LD: BreadcrumbList
const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    { "@type": "ListItem", "position": 1, "name": "Home", "item": "https://jstilesgroutcleaning.com/" },
    { "@type": "ListItem", "position": 2, "name": "Areas We Serve", "item": "https://jstilesgroutcleaning.com/serviceAreas" }
  ]
};
---

<Layout
  title="Areas We Serve | Tile & Grout Cleaning — South Florida"
  description="Professional tile & grout cleaning in Palm Beach, Broward, Miami-Dade & St. Lucie counties. 17+ cities served. Call (561) 913-8786 for a free estimate."
>
  <Fragment slot="head">
    <!-- Geo Meta Tags -->
    <meta name="geo.region" content="US-FL" />
    <meta name="geo.placename" content="South Florida" />
    <meta name="geo.position" content="26.3683;-80.1289" />
    <meta name="ICBM" content="26.3683, -80.1289" />

    <!-- Open Graph -->
    <meta property="og:title" content="Areas We Serve | JS Tile & Grout Cleaning" />
    <meta property="og:description" content="Professional tile & grout restoration across Palm Beach, Broward, Miami-Dade & St. Lucie counties. Free estimates." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jstilesgroutcleaning.com/serviceAreas" />
    <meta property="og:image" content="https://jstilesgroutcleaning.com/images/Logo.webp" />
    <meta property="og:locale" content="en_US" />

    <!-- JSON-LD Schemas -->
    <script type="application/ld+json" set:html={JSON.stringify(localBusinessSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
  </Fragment>

  <Header />

  <PageHero
    badge="Areas We Serve"
    heading="South Florida's Trusted Tile Experts"
    subtitle='Professional tile & grout restoration across 4 counties. <span class="text-orange font-semibold">We Speak Spanish.</span>'
    image="/images/Hero AboutUs.png"
  />

  <!-- Breadcrumb -->
  <nav class="bg-white border-b border-gray-200 py-3" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4">
      <ol class="flex items-center gap-2 text-sm text-gray-500">
        <li>
          <a href="/" class="hover:text-orange transition-colors">Home</a>
        </li>
        <li class="flex items-center gap-2">
          <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path d="M9 5l7 7-7 7" />
          </svg>
          <span class="text-brown font-semibold">Areas We Serve</span>
        </li>
      </ol>
    </div>
  </nav>

  <!-- Section 1: Coverage Stats -->
  <section class="bg-white py-12 md:py-16" aria-labelledby="coverage-heading">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <p class="text-brown font-bold uppercase tracking-widest text-sm mb-2">Our Coverage</p>
        <h2 id="coverage-heading" class="font-heading text-2xl md:text-3xl font-bold italic text-gray-900">Serving All of South Florida</h2>
        <div class="w-16 h-1 bg-brown mx-auto mt-4"></div>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
        {coverageStats.map((stat) => (
          <div class="bg-blue-bg rounded-2xl p-6 text-center">
            <div class="w-14 h-14 bg-blue-accent rounded-full flex items-center justify-center mx-auto mb-4">
              {stat.icon === 'counties' && (
                <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
                </svg>
              )}
              {stat.icon === 'cities' && (
                <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
              {stat.icon === 'response' && (
                <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
              {stat.icon === 'satisfaction' && (
                <svg class="w-7 h-7 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              )}
            </div>
            <p class="font-heading text-3xl font-bold italic text-brown mb-1">{stat.value}</p>
            <p class="text-gray-600 text-sm font-semibold uppercase tracking-wider">{stat.label}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 2: County Cards -->
  <section class="bg-blue-50 py-12 md:py-16" aria-labelledby="areas-heading">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <p class="text-brown font-bold uppercase tracking-widest text-sm mb-2">Coverage Areas</p>
        <h2 id="areas-heading" class="font-heading text-2xl md:text-3xl font-bold italic text-gray-900">Our Service Areas</h2>
        <div class="w-16 h-1 bg-brown mx-auto mt-4"></div>
      </div>

      <div class="space-y-12 lg:space-y-16">
        {counties.map((county, index) => {
          const colors = colorMap[county.accentColor];
          const isEven = index % 2 === 0;
          return (
            <div class={`flex flex-col ${isEven ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-8 lg:gap-12 items-center`}>
              <!-- Image Side -->
              <div class="w-full lg:w-5/12 flex-shrink-0">
                {county.image ? (
                  <img src={county.image} alt={county.name} class="w-full h-full object-cover rounded-lg aspect-[4/3]" />
                ) : (
                  <div class={`${colors.bg} rounded-lg aspect-[4/3] flex items-center justify-center`} role="img" aria-label={county.name}>
                    <svg class="w-20 h-20 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                )}
              </div>

              <!-- Content Side -->
              <div class="w-full lg:w-7/12">
                <h3 class="font-heading text-2xl md:text-3xl font-bold italic text-brown mb-3">{county.name}</h3>

                <!-- Response Time Badge -->
                <span class={`inline-flex items-center gap-1.5 ${colors.bg} text-white text-xs font-bold uppercase tracking-wider px-4 py-1.5 rounded-full mb-4`}>
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  {county.responseTime} — {county.responseLabel}
                </span>

                <p class="text-gray-600 leading-relaxed mb-5">{county.description}</p>

                <!-- City Chips -->
                <p class="text-xs font-bold uppercase tracking-wider text-gray-400 mb-2">Cities We Serve</p>
                <div class="flex flex-wrap gap-2 mb-6">
                  {county.cities.map((city) => (
                    <span class="bg-blue-bg text-blue-accent text-xs font-semibold px-3 py-1.5 rounded-full inline-flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path d="M5 13l4 4L19 7" />
                      </svg>
                      {city.name}
                    </span>
                  ))}
                </div>

                <!-- CTAs -->
                <div class="flex flex-col sm:flex-row items-center gap-4">
                  <a href="tel:5619138786" class="text-brown font-bold text-sm hover:text-orange transition-colors inline-flex items-center gap-2">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    (561) 913-8786
                  </a>
                  <a href="/contact" class="bg-orange text-white px-6 py-2.5 rounded-2xl text-xs font-bold uppercase tracking-wider hover:bg-orange-dark transition-colors">
                    Get Free Estimate
                  </a>
                </div>
              </div>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- Section 3: Services Available in Every Area -->
  <section class="bg-gray-50 py-12 md:py-16" aria-labelledby="services-heading">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <p class="text-brown font-bold uppercase tracking-widest text-sm mb-2">What We Offer</p>
        <h2 id="services-heading" class="font-heading text-2xl md:text-3xl font-bold italic text-gray-900">Services in Every Area</h2>
        <p class="text-gray-600 max-w-2xl mx-auto mt-3">Every service we offer is available across all our coverage areas. No matter where you are in South Florida, you get the same expert quality.</p>
        <div class="w-16 h-1 bg-brown mx-auto mt-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {services.map((service) => (
          <div class="bg-neutral-100 p-6 rounded-2xl border-gray-100 hover:shadow-lg hover:bg-blue-50 transition-shadow">
            <div class={`w-12 h-12 ${service.iconBg} rounded flex items-center justify-center mb-4`}>
              {service.icon === 'tile' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M3 3h8v8H3zM13 3h8v8h-8zM3 13h8v8H3zM13 13h8v8h-8z" />
                </svg>
              )}
              {service.icon === 'marble' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
              )}
              {service.icon === 'seal' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M12 22s-8-4.5-8-11.8A8 8 0 0112 2a8 8 0 018 8.2c0 7.3-8 11.8-8 11.8z" />
                  <circle cx="12" cy="10" r="3" />
                </svg>
              )}
              {service.icon === 'shower' && (
                <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16v2H4zM6 6v14M18 6v14M8 10v2M12 10v2M16 10v2M8 14v2M12 14v2M16 14v2" />
                </svg>
              )}
            </div>
            <h3 class="font-bold text-gray-900 uppercase text-sm mb-3">{service.title}</h3>
            <p class="text-gray-600 text-sm leading-relaxed mb-4">{service.description}</p>
            <a href={`/services#${service.id}`} class="text-blue-accent font-bold text-xs uppercase tracking-wider hover:text-blue-light transition-colors inline-flex items-center gap-1">
              Learn More
              <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Section 4: Testimonials by Area -->
  <section class="bg-white py-12 md:py-16" aria-labelledby="testimonials-heading">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <p class="text-brown font-bold uppercase tracking-widest text-sm mb-2">Reviews</p>
        <h2 id="testimonials-heading" class="font-heading text-2xl md:text-3xl font-bold italic text-gray-900">What Our Customers Say</h2>
        <div class="w-16 h-1 bg-brown mx-auto mt-4"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {allTestimonials.map((testimonial) => (
          <div class="bg-blue-50 rounded-2xl p-6 hover:shadow-lg transition-shadow">
            <!-- Stars -->
            <div class="flex gap-1 mb-4">
              {Array.from({ length: testimonial.stars }).map(() => (
                <svg class="w-5 h-5 text-orange" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>

            <!-- Quote -->
            <blockquote class="text-gray-700 text-sm leading-relaxed italic mb-4">
              "{testimonial.quote}"
            </blockquote>

            <!-- Author -->
            <div class="flex items-center justify-between">
              <div>
                <p class="font-bold text-gray-900 text-sm">{testimonial.name}</p>
                <p class="text-gray-500 text-xs">{testimonial.location}</p>
              </div>
              <span class="bg-blue-bg text-blue-accent text-xs font-semibold px-3 py-1 rounded-full">
                {testimonial.service}
              </span>
            </div>
          </div>
        ))}
      </div>

      <!-- Leave a Review CTA -->
      <div class="text-center mt-10">
        <p class="text-gray-500 text-sm mb-3">Had a great experience? We'd love to hear from you!</p>
        <a
          href="https://g.page/r/CWY6IknnmeOyEBM/review"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 bg-orange text-white px-6 py-3 rounded-2xl font-bold text-sm uppercase tracking-wider hover:bg-orange-dark transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          Leave Us a Review
        </a>
      </div>
    </div>
  </section>

  <CtaBanner />
  <Footer />
</Layout>
