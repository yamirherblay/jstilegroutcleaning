---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageHero from '../components/PageHero.astro';
import Breadcrumb from '../components/Breadcrumb.astro';
import CtaBanner from '../components/CtaBanner.astro';
import Footer from '../components/Footer.astro';
import { services } from '../data/services';
---
<Layout title="Our Services | JS Tile & Grout" description="Professional tile and grout cleaning, marble restoration, sealing, and shower repair services in South Florida. Call (561) 913-8786.">
  <Header />
  <PageHero
    badge="Professional Services"
    heading="Our Tile & Grout Services"
    subtitle='Expert restoration for residential and commercial properties. <span class="text-gold font-semibold">Hablamos Espa√±ol.</span>'
  />
  <Breadcrumb items={[{ label: "Home", href: "/" }, { label: "Services" }]} />

  <!-- Services Content -->
  <section class="bg-white py-12 md:py-16">
    <div class="max-w-6xl mx-auto px-4">
      <!-- Section Header -->
      <div class="text-center mb-12 md:mb-16">
        <p class="text-maroon font-bold uppercase tracking-widest text-sm mb-2">What We Offer</p>
        <h2 class="font-heading text-2xl md:text-3xl font-bold italic text-gray-900 mb-4">Complete Tile & Grout Solutions</h2>
        <p class="text-gray-600 max-w-3xl mx-auto">
          From deep cleaning to restoration and repairs, we provide comprehensive services
          to keep your tile surfaces looking pristine for years to come.
        </p>
        <div class="w-16 h-1 bg-gold mx-auto mt-4"></div>
      </div>

      <!-- Alternating Service Sections -->
      <div class="space-y-16 md:space-y-20">
        {services.map((service, index) => (
          <div id={service.id} class="scroll-mt-24">
            <div class={`flex flex-col ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'} gap-8 lg:gap-12 items-center`}>

              {/* Image/Icon Placeholder */}
              <div class="w-full lg:w-5/12 flex-shrink-0">
                <div class={`${service.iconBg} rounded-lg aspect-[4/3] flex items-center justify-center`}>
                  {service.icon === 'tile' && (
                    <svg class="w-20 h-20 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path d="M3 3h8v8H3zM13 3h8v8h-8zM3 13h8v8H3zM13 13h8v8h-8z" />
                    </svg>
                  )}
                  {service.icon === 'marble' && (
                    <svg class="w-20 h-20 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                    </svg>
                  )}
                  {service.icon === 'seal' && (
                    <svg class="w-20 h-20 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path d="M12 22s-8-4.5-8-11.8A8 8 0 0112 2a8 8 0 018 8.2c0 7.3-8 11.8-8 11.8z" />
                      <circle cx="12" cy="10" r="3" />
                    </svg>
                  )}
                  {service.icon === 'shower' && (
                    <svg class="w-20 h-20 text-white/80" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                      <path d="M4 4h16v2H4zM6 6v14M18 6v14M8 10v2M12 10v2M16 10v2M8 14v2M12 14v2M16 14v2" />
                    </svg>
                  )}
                </div>
              </div>

              {/* Content */}
              <div class="w-full lg:w-7/12">
                <h3 class="font-heading text-2xl md:text-3xl font-bold italic text-navy-dark mb-4">{service.title}</h3>
                <p class="text-gray-600 leading-relaxed mb-6">{service.details}</p>

                {/* Features */}
                <ul class="space-y-3 mb-8">
                  {service.features.map((feature) => (
                    <li class="flex items-start gap-3">
                      <svg class="w-5 h-5 text-gold flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-700">{feature}</span>
                    </li>
                  ))}
                </ul>

                {/* CTA */}
                <a
                  href="/contact"
                  class="inline-block bg-maroon text-white px-8 py-3 font-bold uppercase tracking-wider text-sm hover:bg-red-900 transition-colors"
                >
                  Request Estimate
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <CtaBanner />
  <Footer />
</Layout>
