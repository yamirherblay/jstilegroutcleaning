---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'JS Tile & Grout Cleaning Services | South Florida',
  description = 'Professional tile and grout restoration services in South Florida. Residential & commercial. Call (561) 913-8786 for a free estimate.',
} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&family=Inter+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet" />
		<title>{title}</title>
		<slot name="head" />
	</head>
	<body class="font-body text-[#2B2B2B] m-0 pt-[57px]">
		<slot />
	</body>

</html>
