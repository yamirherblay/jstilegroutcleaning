---
import { socialLinks } from "../data/SocialLinks.ts";
---
<section class="bg-gray-50 py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 lg:grid-cols-5 gap-8">

      <!-- Left Column: Form (3/5) -->
      <div class="lg:col-span-3">
        <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
          <h2 class="font-heading text-2xl md:text-3xl font-bold italic text-brown mb-6">Request Your Free Estimate</h2>

          <form id="contact-form" class="space-y-5">
            <!-- Row: Name + Email -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
              <div>
                <label for="full-name" class="block text-sm font-semibold text-gray-700 uppercase tracking-wider mb-2">Full Name</label>
                <input
                  type="text"
                  id="full-name"
                  name="full-name"
                  required
                  placeholder="Your full name"
                  class="w-full border border-gray-300 rounded px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-accent focus:border-transparent"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-semibold text-gray-700 uppercase tracking-wider mb-2">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  placeholder="your@email.com"
                  class="w-full border border-gray-300 rounded px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-accent focus:border-transparent"
                />
              </div>
            </div>

            <!-- Row: Phone + Service -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
              <div>
                <label for="phone" class="block text-sm font-semibold text-gray-700 uppercase tracking-wider mb-2">Phone Number</label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  required
                  placeholder="(555) 123-4567"
                  class="w-full border border-gray-300 rounded px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-accent focus:border-transparent"
                />
              </div>
              <div>
                <label for="service" class="block text-sm font-semibold text-gray-700 uppercase tracking-wider mb-2">Service Needed</label>
                <select
                  id="service"
                  name="service"
                  required
                  class="w-full border border-gray-300 rounded px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-accent focus:border-transparent bg-white"
                >
                  <option value="" disabled selected>Select a service</option>
                  <option value="Tile & Grout Cleaning">Tile & Grout Cleaning</option>
                  <option value="Marble Restoration">Marble Restoration</option>
                  <option value="Sealing & Stripping">Sealing & Stripping</option>
                  <option value="Shower Repairs">Shower Repairs</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="block text-sm font-semibold text-gray-700 uppercase tracking-wider mb-2">Message / Project Details</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                placeholder="Tell us about your project..."
                class="w-full border border-gray-300 rounded px-4 py-3 text-sm focus:outline-none focus:ring-2 focus:ring-blue-accent focus:border-transparent resize-vertical"
              ></textarea>
            </div>

            <!-- Submit -->
            <button
              type="submit"
              class="w-full rounded-2xl md:w-auto bg-orange text-white px-10 py-3 font-bold uppercase tracking-wider text-sm hover:bg-orange-dark transition-colors"
            >
              Send Request
            </button>
          </form>
        </div>
      </div>

      <!-- Right Column: Contact Details (2/5) -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
          <!-- Heading + Badge -->
          <div class="flex flex-wrap items-center gap-3 mb-6">
            <h2 class="font-heading text-2xl font-bold italic text-brown">Contact Details</h2>
            <span class="bg-blue-accent text-white text-xs font-bold uppercase tracking-wider px-3 py-1 rounded">We speak Spanish</span>
          </div>

          <!-- Phone -->
          <div class="flex items-start gap-4 mb-8">
            <div class="w-12 h-12 bg-brown rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <p class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-1">Call or Text</p>
              <a href="tel:5619138786" class="text-xl font-bold text-brown hover:text-orange transition-colors">(561) 913-8786</a>
              <p class="text-blue-accent text-sm italic mt-1">Prompt response guaranteed.</p>
            </div>
          </div>

          <!-- Social Media -->
          <div class="mb-8">
            <p class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-3">Follow Our Work</p>
            <div class="flex gap-3">
              <!-- Facebook -->
              <a href={ socialLinks.Facebook }  target="_blank" class="w-10 h-10 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-blue-accent hover:text-blue-accent text-gray-500 transition-colors" aria-label="Facebook">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <!-- Instagram -->
              <a href={socialLinks.Instagram} target="_blank" class="w-10 h-10 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-blue-accent hover:text-blue-accent text-gray-500 transition-colors" aria-label="Instagram">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <rect x="2" y="2" width="20" height="20" rx="5" />
                  <circle cx="12" cy="12" r="5" />
                  <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none" />
                </svg>
              </a>
              <!-- TikTok -->
              <a href={socialLinks.TikTok} target="_blank" class="w-10 h-10 rounded-full border-2 border-gray-300 flex items-center justify-center hover:border-blue-accent hover:text-blue-accent text-gray-500 transition-colors" aria-label="TikTok">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-2.88 2.5 2.89 2.89 0 01-2.89-2.89 2.89 2.89 0 012.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 00-.79-.05A6.34 6.34 0 003.15 15.2a6.34 6.34 0 0010.86 4.46V13a8.28 8.28 0 005.58 2.15V11.7a4.83 4.83 0 01-3.77-1.24V6.69h3.77z"/>
                </svg>
              </a>
            </div>
          </div>
          <!-- Business Hours -->
          <div>
            <div class="flex items-start gap-4 mb-4">
              <div class="w-12 h-12 bg-brown rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10" />
                  <path d="M12 6v6l4 2" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-bold uppercase tracking-wider text-gray-500 mb-1">Business Hours</p>
              </div>
            </div>
            <table class="w-full text-sm">
              <tbody>
                <tr class="border-b border-gray-200">
                  <td class="text-gray-600 py-2">Monday - Friday</td>
                  <td class="text-brown font-semibold py-2 text-right">8:00 AM - 6:00 PM</td>
                </tr>
                <tr class="border-b border-gray-200">
                    <td class="text-gray-600 py-2">Saturday</td>
                    <td class="text-brown font-semibold py-2 text-right">8:00 AM - 4:00 PM</td>
                </tr>
                <tr>
                  <td class="text-orange font-semibold py-2">Sunday</td>
                  <td class="text-orange font-semibold py-2 text-right">Closed</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  form?.addEventListener('submit', (e) => {
    e.preventDefault();

    const name = (document.getElementById('full-name') as HTMLInputElement).value;
    const email = (document.getElementById('email') as HTMLInputElement).value;
    const phone = (document.getElementById('phone') as HTMLInputElement).value;
    const service = (document.getElementById('service') as HTMLSelectElement).value;
    const message = (document.getElementById('message') as HTMLTextAreaElement).value;

    const subject = `New Estimate Request - ${name}`;
    const body = `NEW ESTIMATE REQUEST
====================

Name: ${name}
Email: ${email}
Phone: ${phone}
Service: ${service}

Message:
${message || 'N/A'}

--
Sent from JS Tile & Grout website`;

    const mailtoUrl = `mailto:jstilegroutcleaning@gmail.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;
    window.location.href = mailtoUrl;
  });
</script>
