---
import { services } from '../data/services';
---
<section id="services" class="bg-gray-50 py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <p class="text-brown font-bold uppercase tracking-widest text-sm mb-2">Expert Services</p>
      <h2 class="font-heading text-3xl md:text-4xl font-bold italic text-gray-700">What We Do Best</h2>
      <div class="w-16 h-1 bg-brown mx-auto mt-4"></div>
    </div>

    <!-- Service Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {services.map((service) => (
        <div class="bg-white p-6 border border-gray-100 hover:shadow-lg transition-shadow">
          <!-- Icon -->
          <div class={`w-12 h-12 ${service.iconBg} rounded flex items-center justify-center mb-4`}>
            {service.icon === 'tile' && (
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M3 3h8v8H3zM13 3h8v8h-8zM3 13h8v8H3zM13 13h8v8h-8z" />
              </svg>
            )}
            {service.icon === 'marble' && (
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
              </svg>
            )}
            {service.icon === 'seal' && (
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M12 22s-8-4.5-8-11.8A8 8 0 0112 2a8 8 0 018 8.2c0 7.3-8 11.8-8 11.8z" />
                <circle cx="12" cy="10" r="3" />
              </svg>
            )}
            {service.icon === 'shower' && (
              <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16v2H4zM6 6v14M18 6v14M8 10v2M12 10v2M16 10v2M8 14v2M12 14v2M16 14v2" />
              </svg>
            )}
          </div>

          <!-- Content -->
          <h3 class="font-bold text-gray-900 uppercase text-sm mb-3">{service.title}</h3>
          <p class="text-gray-600 text-sm leading-relaxed mb-4">{service.description}</p>
          <a href="/services" class="text-blue-accent font-bold text-xs uppercase tracking-wider hover:text-blue-light transition-colors inline-flex items-center gap-1">
            Learn More
            <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
              <path d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
