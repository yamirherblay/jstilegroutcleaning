---
const projects = [
  {
    title: 'Kitchen Floor Restoration',
    stars: 5,
  },
  {
    title: 'Bathroom Shower Repair',
    stars: 5,
  },
];
---
<section id="gallery" class="bg-navy py-16 md:py-20">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Section Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-10">
      <div>
        <p class="text-maroon font-bold uppercase tracking-widest text-sm mb-2">Our Results</p>
        <h2 class="font-heading text-3xl md:text-4xl font-bold italic text-white">Dramatic Transformations</h2>
      </div>
      <a
        href="#"
        class="mt-4 md:mt-0 border-2 border-white text-white px-6 py-3 font-bold uppercase tracking-wider text-sm text-center hover:bg-white hover:text-navy transition-colors self-start"
      >
        Full Gallery
      </a>
    </div>

    <!-- Before/After Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map((project) => (
        <div>
          <!-- Image Comparison -->
          <div class="relative flex h-48 md:h-64 overflow-hidden">
            <!-- Before -->
            <div class="w-1/2 bg-gray-700 flex items-center justify-center relative">
              <span class="text-gray-400 text-sm">Before Photo</span>
              <span class="absolute top-3 left-3 bg-maroon text-white text-xs font-bold uppercase px-2 py-1">Before</span>
            </div>
            <!-- After -->
            <div class="w-1/2 bg-gray-500 flex items-center justify-center relative">
              <span class="text-gray-300 text-sm">After Photo</span>
              <span class="absolute top-3 right-3 bg-green-700 text-white text-xs font-bold uppercase px-2 py-1">After</span>
            </div>
          </div>
          <!-- Card Footer -->
          <div class="flex items-center justify-between mt-4">
            <h3 class="text-white font-bold uppercase text-sm">{project.title}</h3>
            <div class="flex gap-0.5">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg
                  class={`w-4 h-4 ${i < project.stars ? 'text-gold' : 'text-gray-600'}`}
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                >
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
