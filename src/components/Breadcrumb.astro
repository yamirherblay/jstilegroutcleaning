---
interface Props {
  items: Array<{ label: string; href?: string }>;
}

const { items } = Astro.props;
---
<!-- Accent bar -->
<div class="h-1 bg-maroon"></div>

<!-- Breadcrumb -->
<div class="bg-gray-50 border-b border-gray-200">
  <nav class="max-w-7xl mx-auto px-4 py-3" aria-label="Breadcrumb">
    <ol class="flex items-center gap-2 text-sm">
      {items.map((item, index) => (
        <li class="flex items-center gap-2">
          {index > 0 && <span class="text-gray-400">/</span>}
          {item.href ? (
            <a href={item.href} class="text-maroon hover:text-red-900 transition-colors font-medium">
              {item.label}
            </a>
          ) : (
            <span class="text-gray-500">{item.label}</span>
          )}
        </li>
      ))}
    </ol>
  </nav>
</div>
