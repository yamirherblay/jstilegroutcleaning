---
interface SocialLinks {
    Facebook?: string;
    Instagram?: string;
    Twitter?: string;
}
const socialLinks = Astro.props.socialLinks as SocialLinks || {
    Facebook: 'https://www.facebook.com/profile.php?id=61576322027795&sk',
    Instagram: 'https://www.instagram.com/jstileandgrout/',
    Twitter: '',
};
---
<footer id="contact" class="bg-white text-gray-700 py-12 md:py-16">
  <div class="max-w-7xl mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">

      <!-- Column 1: Logo & About -->
      <div>
          <a href="/" class="flex flex-col leading-tight">
              <img src="/images/Logo.png" alt="JS Tile & Grout Cleaning Logo" class="w-36 h-auto md:w-44" loading="eager" />
          </a>
        <p class="text-gray-600 text-sm leading-relaxed mb-6">
          The highest quality tile and grout restoration services. We take pride in our work and ensure customer satisfaction on every job.
        </p>
        <!-- Social Icons -->
        <div class="flex gap-3">
          <!-- FACEBOOK -->
            <a href={socialLinks.Facebook} class="w-8 h-8 bg-blue-accent rounded flex items-center justify-center hover:bg-blue-light transition-colors" aria-label="Facebook">
                <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M18 2h-3a4 4 0 00-4 4v3H8v4h3v7h4v-7h3l1-4h-4V6a1 1 0 011-1z" />
                </svg>
            </a>
          <!-- Instagram -->
          <a href={socialLinks.Instagram} class="w-8 h-8 bg-blue-accent rounded flex items-center justify-center hover:bg-blue-light transition-colors" aria-label="Instagram">
            <svg class="w-4 h-4 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" />
              <circle cx="12" cy="12" r="5" />
              <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor" stroke="none" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Column 2: Our Services -->
      <div>
        <h3 class="text-blue-accent font-bold uppercase tracking-wider text-sm mb-4">Our Services</h3>
        <ul class="space-y-3">
          <li><a href="/services#tile-grout-cleaning" class="text-gray-600 text-sm hover:text-orange transition-colors">Tile & Grout Cleaning</a></li>
          <li><a href="/services#marble-restoration" class="text-gray-600 text-sm hover:text-orange transition-colors">Marble Restoration</a></li>
          <li><a href="/services#sealing-stripping" class="text-gray-600 text-sm hover:text-orange transition-colors">Sealing & Stripping</a></li>
          <li><a href="/services#shower-repairs" class="text-gray-600 text-sm hover:text-orange transition-colors">Shower Repairs</a></li>
        </ul>
      </div>

      <!-- Column 3: Contact Info -->
      <div>
        <h3 class="text-blue-accent font-bold uppercase tracking-wider text-sm mb-4">Contact Info</h3>
        <ul class="space-y-3">
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-blue-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:5619138786" class="text-gray-600 text-sm hover:text-white transition-colors">(561) 913-8786</a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-blue-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span class="text-gray-600 text-sm">We speak Spanish</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-4 h-4 text-blue-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
            <span class="text-gray-600 text-sm">Residential & Commercial</span>
          </li>
        </ul>
      </div>

      <!-- Column 4: Working Hours -->
      <div>
        <h3 class="text-blue-accent font-bold uppercase tracking-wider text-sm mb-4">Working Hours</h3>
        <table class="w-full text-sm">
          <tbody>
            <tr class="border-b border-gray-700">
              <td class="text-gray-600 py-2">Monday - Friday</td>
              <td class="text-orange py-2 text-right">8:00 AM - 6:00 PM</td>
            </tr>
            <tr class="border-b border-gray-700">
              <td class="text-gray-600 py-2">Saturday</td>
              <td class="text-orange py-2 text-right">9:00 AM - 4:00 PM</td>
            </tr>
            <tr>
              <td class="text-orange font-semibold py-2">Sunday</td>
              <td class="text-orange font-semibold py-2 text-right">Closed</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</footer>
