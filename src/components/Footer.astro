      <!-- Column 4: Working Hours -->
      <div>
        <h3 class="text-blue-accent font-bold uppercase tracking-wider text-sm mb-4">Working Hours</h3>
        <table class="w-full text-sm">
          <tbody>
            <tr class="border-b border-gray-700">
              <td class="text-gray-600 py-2">Monday - Friday</td>
              <td class="text-orange py-2 text-right">8:00 AM - 6:00 PM</td>
            </tr>
            <tr class="border-b border-gray-700">
              <td class="text-gray-600 py-2">Saturday</td>
              <td class="text-orange py-2 text-right">9:00 AM - 4:00 PM</td>
            </tr>
            <tr>
              <td class="text-orange font-semibold py-2">Sunday</td>
              <td class="text-orange font-semibold py-2 text-right">Closed</td>
            </tr>
