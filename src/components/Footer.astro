---
interface SocialLinks {
    Facebook?: string;
    Instagram?: string;
    Twitter?: string;
}
const socialLinks = Astro.props.socialLinks as SocialLinks || {
    Facebook: 'https://www.facebook.com/profile.php?id=61576322027795&sk',
    Instagram: 'https://www.instagram.com/jstileandgrout/',
    Twitter: '',
