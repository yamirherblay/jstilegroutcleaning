<section class="relative bg-navy-dark overflow-hidden">
  <!-- Background overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-navy-dark via-navy to-gray-800 opacity-90"></div>
  <!-- Decorative top bar -->
  <div class="absolute top-0 left-0 right-0 h-1 bg-gold"></div>

  <div class="relative max-w-7xl mx-auto px-4 py-12 md:py-20 lg:py-24">
    <!-- Free Estimate Badge -->
    <div class="mb-6">
      <span class="free-estimate-badge inline-block bg-gold text-white text-sm font-bold uppercase tracking-wider px-4 py-2">
        Free Estimate
      </span>
    </div>

    <!-- Main Heading -->
    <h1 class="font-heading text-3xl md:text-5xl lg:text-6xl font-bold italic leading-tight mb-6">
      <span class="text-white">Professional</span><br />
      <span class="text-maroon">Tile & Grout</span><br />
      <span class="text-white">Restoration</span>
    </h1>

    <!-- Subtitle with red border -->
    <div class="flex flex-wrap items-center gap-3 mb-6 text-sm md:text-base">
      <div class="flex items-center gap-3">
        <span class="block w-1 h-6 bg-maroon"></span>
        <span class="text-white font-bold uppercase tracking-wider">Residential & Commercial</span>
      </div>
      <span class="hidden md:inline text-gray-500">|</span>
      <span class="text-maroon font-bold uppercase tracking-wider">Se Habla Espa√±ol</span>
    </div>

    <!-- Service List -->
    <ul class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2 mb-8 max-w-md">
      <li class="flex items-center gap-2 text-white text-sm">
        <span class="w-2 h-2 rounded-full bg-gold flex-shrink-0"></span>
        Tile & Grout Cleaning
      </li>
      <li class="flex items-center gap-2 text-white text-sm">
        <span class="w-2 h-2 rounded-full bg-gold flex-shrink-0"></span>
        Sealing & Stripping
      </li>
      <li class="flex items-center gap-2 text-white text-sm">
        <span class="w-2 h-2 rounded-full bg-gold flex-shrink-0"></span>
        Marble Restoration
      </li>
      <li class="flex items-center gap-2 text-white text-sm">
        <span class="w-2 h-2 rounded-full bg-gold flex-shrink-0"></span>
        Shower Repairs
      </li>
    </ul>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-4">
      <a
        href="tel:5619138786"
        class="bg-maroon text-white px-8 py-3 font-bold uppercase tracking-wider text-center hover:bg-red-900 transition-colors text-sm md:text-base"
      >
        Call (561) 913-8786
      </a>
      <a
        href="#gallery"
        class="border-2 border-white text-white px-8 py-3 font-bold uppercase tracking-wider text-center hover:bg-white hover:text-navy transition-colors text-sm md:text-base"
      >
        Our Gallery
      </a>
    </div>
  </div>
</section>

<style>
  .free-estimate-badge {
    transform: skewX(-5deg);
  }
</style>
